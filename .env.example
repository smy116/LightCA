# ============================================
# REQUIRED CONFIGURATION
# ============================================

# Master Key (min 32 characters) - Used for JWT signing and private key/password encryption
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))" 
MASTER_KEY=change-this-to-a-secure-min-32-character-key

# Admin Password - Can be plaintext or bcrypt hash
ADMIN_PASSWORD=change-this-to-your-admin-password

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Database Type (default: sqlite)
DB_TYPE=sqlite

# Database URL (for PostgreSQL)
# DATABASE_URL=postgresql://user:pass@host/db

# JWT Access Token Expiration (default: 1440 minutes = 24 hours)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CRL Configuration
CRL_DISTRIBUTION_URL=http://localhost:8000/public/crl
CRL_VALIDITY_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Debug Mode (default: false)
DEBUG=false

# Log Level (default: info)
LOG_LEVEL=info

# ============================================
# DOCKER COMPOSE OVERRIDES (OPTIONAL)
# ============================================

# Use a prebuilt image from GHCR
# LIGHTCA_IMAGE=ghcr.io/smy116/lightca:latest

# Override container name
# LIGHTCA_CONTAINER_NAME=lightca
